{
	"name": "@open-form/core",
	"version": "0.1.1",
	"description": "Core package for OpenForm framework - schemas, builders, validation, and serialization utilities",
	"type": "module",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"default": "./dist/index.js"
		}
	},
	"sideEffects": false,
	"files": [
		"dist",
		"README.md",
		"CHANGELOG.md",
		"LICENSE.md"
	],
	"keywords": [
		"open-form",
		"openform",
		"forms",
		"schema",
		"validation",
		"documents",
		"documents-as-code",
		"artifacts",
		"pdf",
		"typebox",
		"json-schema"
	],
	"license": "MIT",
	"author": {
		"name": "OpenForm",
		"url": "https://open-form.dev"
	},
	"engines": {
		"node": ">=18"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/open-form/open-form.git",
		"directory": "packages/core"
	},
	"homepage": "https://open-form.dev",
	"bugs": {
		"url": "https://github.com/open-form/open-form/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "tsup",
		"postbuild": "node scripts/fix-json-imports.mjs",
		"dev": "tsup --watch",
		"clean": "rm -rf dist",
		"prebuild": "pnpm run clean",
		"pack:dry": "pnpm run build && npm pack --dry-run",
		"prepublishOnly": "pnpm run build",
		"lint": "eslint .",
		"check-types": "tsc --noEmit",
		"check": "pnpm lint && pnpm check-types && echo \"✅ All checks passed\" || echo \"❌ Checks failed\"",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"export:all-schemas": "tsx scripts/export-all-schemas.ts",
		"export:root-schema": "tsx scripts/export-root-schema.ts"
	},
	"dependencies": {
		"@open-form/schemas": "workspace:^",
		"@open-form/types": "workspace:^",
		"@standard-schema/spec": "^1.0.0",
		"ajv": "^8.17.1",
		"ajv-formats": "^3.0.1",
		"expr-eval-fork": "^3.0.1",
		"yaml": "catalog:"
	},
	"devDependencies": {
		"@open-form/eslint-config": "workspace:*",
		"@open-form/typescript-config": "workspace:*",
		"@types/node": "catalog:",
		"@vitest/coverage-v8": "catalog:",
		"eslint": "catalog:",
		"tsup": "catalog:",
		"tsx": "^4.20.6",
		"typescript": "catalog:",
		"vitest": "catalog:"
	}
}
