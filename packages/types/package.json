{
  "name": "@open-form/types",
  "version": "0.2.1",
  "description": "Core types and formatting utilities for OpenForm framework - renderer interfaces, templates, and field formatters",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "sideEffects": false,
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "LICENSE.md"
  ],
  "keywords": [
    "openform",
    "open-form",
    "forms",
    "types",
    "interfaces",
    "renderer",
    "formatters"
  ],
  "license": "MIT",
  "author": {
    "name": "OpenForm",
    "url": "https://open-form.dev"
  },
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/open-form/open-form.git",
    "directory": "packages/types"
  },
  "homepage": "https://open-form.dev",
  "bugs": {
    "url": "https://github.com/open-form/open-form/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "prebuild": "pnpm run clean",
    "pack:dry": "pnpm run build && npm pack --dry-run",
    "prepublishOnly": "pnpm run build",
    "lint": "eslint .",
    "check-types": "tsc --noEmit",
    "check": "pnpm lint && pnpm check-types && echo \"✅ All checks passed\" || echo \"❌ Checks failed\""
  },
  "dependencies": {},
  "devDependencies": {
    "@open-form/eslint-config": "workspace:*",
    "@open-form/typescript-config": "workspace:*",
    "@types/node": "catalog:",
    "eslint": "catalog:",
    "tsup": "catalog:",
    "typescript": "catalog:"
  }
}
