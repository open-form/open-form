{
  "name": "@open-form/schemas",
  "version": "0.2.1",
  "description": "JSON Schema definitions for OpenForm framework artifacts, blocks, and primitives",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "sideEffects": false,
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "LICENSE.md"
  ],
  "keywords": [
    "openform",
    "open-form",
    "forms",
    "json-schema",
    "schemas",
    "zod",
    "validation"
  ],
  "license": "MIT",
  "author": {
    "name": "OpenForm",
    "url": "https://open-form.dev"
  },
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/open-form/open-form.git",
    "directory": "packages/schemas"
  },
  "homepage": "https://open-form.dev",
  "bugs": {
    "url": "https://github.com/open-form/open-form/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf schemas/open-form.schema.json dist",
    "pack:dry": "npm pack --dry-run",
    "prepublishOnly": "pnpm run build",
    "lint": "eslint .",
    "check-types": "tsc --noEmit",
    "check": "pnpm lint && pnpm check-types && echo \"✅ All checks passed\" || echo \"❌ Checks failed\"",
    "export:bundled-schema": "tsx scripts/export-root-schema-zod.ts",
    "export:individual-schemas": "tsx scripts/export-all-schemas-zod.ts",
    "export:manifest": "tsx scripts/export-manifest-schema-zod.ts",
    "export:registry": "tsx scripts/export-registry-schemas-zod.ts",
    "export:all": "pnpm export:bundled-schema && pnpm export:individual-schemas && pnpm export:manifest && pnpm export:registry"
  },
  "dependencies": {},
  "devDependencies": {
    "zod": "catalog:",
    "@open-form/eslint-config": "workspace:*",
    "@open-form/types": "workspace:*",
    "@open-form/typescript-config": "workspace:*",
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "eslint": "catalog:",
    "tsup": "catalog:",
    "tsx": "^4.20.6",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
