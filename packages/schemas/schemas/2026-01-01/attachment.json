{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schema.open-form.dev/2026-01-01/attachment.json",
  "title": "Attachment",
  "additionalProperties": false,
  "description": "Attachment data representing an attached document. The key in the record is the annex identifier (the key from form.annexes).",
  "type": "object",
  "properties": {
    "name": {
      "description": "Original file name",
      "minLength": 1,
      "maxLength": 255,
      "type": "string"
    },
    "mimeType": {
      "description": "MIME type of the attached file",
      "minLength": 1,
      "maxLength": 100,
      "type": "string"
    },
    "checksum": {
      "description": "SHA-256 checksum for integrity verification",
      "pattern": "^sha256:[a-f0-9]{64}$",
      "type": "string"
    }
  },
  "required": [
    "name",
    "mimeType"
  ]
}