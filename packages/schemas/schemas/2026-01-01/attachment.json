{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schema.open-form.dev/2026-01-01/attachment.json",
  "type": "object",
  "properties": {
    "name": {
      "description": "Original file name",
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    "mimeType": {
      "description": "MIME type of the attached file",
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    },
    "checksum": {
      "description": "SHA-256 checksum for integrity verification",
      "type": "string",
      "pattern": "^sha256:[a-f0-9]{64}$"
    }
  },
  "required": [
    "name",
    "mimeType"
  ],
  "additionalProperties": false,
  "id": "Attachment",
  "title": "Attachment"
}