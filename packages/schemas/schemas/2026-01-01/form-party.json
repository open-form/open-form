{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schema.open-form.dev/2026-01-01/formparty.json",
  "id": "FormParty",
  "type": "object",
  "properties": {
    "label": {
      "description": "Display name for this role",
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    },
    "description": {
      "description": "Description of this role",
      "type": "string",
      "maxLength": 500
    },
    "partyType": {
      "description": "Constraint on party type",
      "default": "any",
      "anyOf": [
        {
          "type": "string",
          "const": "person"
        },
        {
          "type": "string",
          "const": "organization"
        },
        {
          "type": "string",
          "const": "any"
        }
      ]
    },
    "min": {
      "description": "Minimum parties required",
      "default": 1,
      "type": "number",
      "minimum": 0
    },
    "max": {
      "description": "Maximum parties allowed",
      "default": 1,
      "type": "number",
      "minimum": 1
    },
    "required": {
      "$ref": "https://schema.open-form.dev/2026-01-01.json/$defs/CondExpr"
    },
    "signature": {
      "title": "FormSignature",
      "description": "Design-time signature requirements for a party role",
      "type": "object",
      "properties": {
        "required": {
          "description": "Whether signature is required for this role",
          "default": false,
          "type": "boolean"
        },
        "witnesses": {
          "description": "Number of witnesses required for this signature",
          "default": 0,
          "type": "number",
          "minimum": 0
        },
        "notarized": {
          "description": "Whether at least one witness must be a notary",
          "default": false,
          "type": "boolean"
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "label"
  ],
  "additionalProperties": false,
  "$defs": {
    "CondExpr": {
      "id": "CondExpr",
      "anyOf": [
        {
          "description": "Literal boolean value",
          "type": "boolean"
        },
        {
          "description": "Expression string - either inline expression or reference to a logic key",
          "type": "string",
          "minLength": 1,
          "maxLength": 2000
        }
      ]
    }
  },
  "title": "FormParty"
}