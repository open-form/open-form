{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schema.open-form.dev/2026-01-01/formparty.json",
  "title": "FormParty",
  "description": "Design-time party role definition. Defines what roles exist and what constraints apply when filling a form.",
  "type": "object",
  "properties": {
    "label": {
      "minLength": 1,
      "maxLength": 100,
      "description": "Display name for this role",
      "type": "string"
    },
    "description": {
      "maxLength": 500,
      "description": "Description of this role",
      "type": "string"
    },
    "partyType": {
      "default": "any",
      "description": "Constraint on party type",
      "anyOf": [
        {
          "const": "person",
          "type": "string"
        },
        {
          "const": "organization",
          "type": "string"
        },
        {
          "const": "any",
          "type": "string"
        }
      ]
    },
    "min": {
      "minimum": 0,
      "default": 1,
      "description": "Minimum parties required",
      "type": "number"
    },
    "max": {
      "minimum": 1,
      "default": 1,
      "description": "Maximum parties allowed",
      "type": "number"
    },
    "required": {
      "$ref": "https://schema.open-form.dev/2026-01-01.json#/$defs/CondExpr"
    },
    "signature": {
      "title": "FormSignature",
      "description": "Design-time signature requirements for a party role",
      "type": "object",
      "properties": {
        "required": {
          "default": false,
          "description": "Whether signature is required for this role",
          "type": "boolean"
        },
        "witnesses": {
          "minimum": 0,
          "default": 0,
          "description": "Number of witnesses required for this signature",
          "type": "number"
        },
        "notarized": {
          "default": false,
          "description": "Whether at least one witness must be a notary",
          "type": "boolean"
        }
      }
    }
  },
  "required": [
    "label"
  ]
}