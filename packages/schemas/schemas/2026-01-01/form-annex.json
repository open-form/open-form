{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schema.open-form.dev/2026-01-01/formannex.json",
  "type": "object",
  "properties": {
    "title": {
      "description": "Title or heading for the annex slot",
      "type": "string",
      "minLength": 1,
      "maxLength": 200
    },
    "description": {
      "description": "Description of what document should be attached",
      "type": "string",
      "minLength": 1,
      "maxLength": 1000
    },
    "required": {
      "$ref": "https://schema.open-form.dev/2026-01-01.json/$defs/CondExpr"
    },
    "visible": {
      "$ref": "https://schema.open-form.dev/2026-01-01.json/$defs/CondExpr"
    },
    "order": {
      "description": "Display order for rendering",
      "type": "number",
      "minimum": 0
    }
  },
  "additionalProperties": false,
  "id": "FormAnnex",
  "$defs": {
    "CondExpr": {
      "id": "CondExpr",
      "anyOf": [
        {
          "description": "Literal boolean value",
          "type": "boolean"
        },
        {
          "description": "Expression string - either inline expression or reference to a logic key",
          "type": "string",
          "minLength": 1,
          "maxLength": 2000
        }
      ]
    }
  },
  "title": "FormAnnex"
}