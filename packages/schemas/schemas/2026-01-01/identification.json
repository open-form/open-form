{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schema.open-form.dev/2026-01-01/identification.json",
  "type": "object",
  "properties": {
    "type": {
      "description": "Type of identification document (e.g., ssn, passport, license, ein)",
      "type": "string",
      "minLength": 1,
      "maxLength": 50
    },
    "number": {
      "description": "Identification number or identifier",
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    },
    "issuer": {
      "description": "Issuing authority, country, or state (e.g., US, CA, DMV)",
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    },
    "issueDate": {
      "description": "Issue date in ISO 8601 format (YYYY-MM-DD)",
      "type": "string",
      "format": "date",
      "pattern": "^(?:(?:\\d\\d[2468][048]|\\d\\d[13579][26]|\\d\\d0[48]|[02468][048]00|[13579][26]00)-02-29|\\d{4}-(?:(?:0[13578]|1[02])-(?:0[1-9]|[12]\\d|3[01])|(?:0[469]|11)-(?:0[1-9]|[12]\\d|30)|(?:02)-(?:0[1-9]|1\\d|2[0-8])))$"
    },
    "expiryDate": {
      "description": "Expiry date in ISO 8601 format (YYYY-MM-DD)",
      "type": "string",
      "format": "date",
      "pattern": "^(?:(?:\\d\\d[2468][048]|\\d\\d[13579][26]|\\d\\d0[48]|[02468][048]00|[13579][26]00)-02-29|\\d{4}-(?:(?:0[13578]|1[02])-(?:0[1-9]|[12]\\d|3[01])|(?:0[469]|11)-(?:0[1-9]|[12]\\d|30)|(?:02)-(?:0[1-9]|1\\d|2[0-8])))$"
    }
  },
  "required": [
    "type",
    "number"
  ],
  "additionalProperties": false,
  "id": "Identification",
  "title": "Identification"
}