{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schema.open-form.dev/2026-01-01/coordinate.json",
  "type": "object",
  "properties": {
    "lat": {
      "description": "Latitude in decimal degrees (WGS84), range -90 (South Pole) to 90 (North Pole)",
      "type": "number",
      "minimum": -90,
      "maximum": 90
    },
    "lon": {
      "description": "Longitude in decimal degrees (WGS84), range -180 (west) to 180 (east)",
      "type": "number",
      "minimum": -180,
      "maximum": 180
    }
  },
  "required": [
    "lat",
    "lon"
  ],
  "additionalProperties": false,
  "id": "Coordinate",
  "title": "Coordinate"
}