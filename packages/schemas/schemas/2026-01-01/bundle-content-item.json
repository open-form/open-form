{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schema.open-form.dev/2026-01-01/bundlecontentitem.json",
  "id": "BundleContentItem",
  "oneOf": [
    {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "inline"
        },
        "key": {
          "description": "Unique identifier for this content item, used to reference it in logic expressions",
          "type": "string",
          "minLength": 1,
          "maxLength": 100,
          "pattern": "^[a-zA-Z][a-zA-Z0-9_-]*$"
        },
        "artifact": {
          "description": "Inline artifact definition (document, form, checklist, or nested bundle)"
        }
      },
      "required": [
        "type",
        "key",
        "artifact"
      ],
      "additionalProperties": false
    },
    {
      "type": "object",
      "properties": {
        "key": {
          "description": "Unique identifier for this content item, used to reference it in logic expressions",
          "type": "string",
          "minLength": 1,
          "maxLength": 100,
          "pattern": "^[a-zA-Z][a-zA-Z0-9_-]*$"
        },
        "include": {
          "$ref": "https://schema.open-form.dev/2026-01-01.json/$defs/CondExpr"
        },
        "type": {
          "type": "string",
          "const": "path"
        },
        "path": {
          "description": "Absolute path from repo root to the artifact file",
          "type": "string",
          "minLength": 1
        }
      },
      "required": [
        "key",
        "type",
        "path"
      ],
      "additionalProperties": false
    },
    {
      "type": "object",
      "properties": {
        "key": {
          "description": "Unique identifier for this content item, used to reference it in logic expressions",
          "type": "string",
          "minLength": 1,
          "maxLength": 100,
          "pattern": "^[a-zA-Z][a-zA-Z0-9_-]*$"
        },
        "include": {
          "$ref": "https://schema.open-form.dev/2026-01-01.json/$defs/CondExpr"
        },
        "type": {
          "type": "string",
          "const": "registry"
        },
        "slug": {
          "description": "Resource slug in format @org/repo/resource or @org/repo/resource@version",
          "type": "string",
          "minLength": 1
        }
      },
      "required": [
        "key",
        "type",
        "slug"
      ],
      "additionalProperties": false
    }
  ],
  "$defs": {
    "CondExpr": {
      "id": "CondExpr",
      "anyOf": [
        {
          "description": "Literal boolean value",
          "type": "boolean"
        },
        {
          "description": "Expression string - either inline expression or reference to a logic key",
          "type": "string",
          "minLength": 1,
          "maxLength": 2000
        }
      ]
    }
  },
  "title": "BundleContentItem"
}