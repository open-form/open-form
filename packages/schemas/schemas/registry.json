{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schema.open-form.dev/registry.json",
  "type": "object",
  "properties": {
    "$schema": {
      "description": "JSON Schema URI for validation",
      "type": "string",
      "format": "uri"
    },
    "name": {
      "description": "Registry name/identifier",
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    },
    "homepage": {
      "description": "Homepage URL for the registry",
      "type": "string",
      "format": "uri"
    },
    "description": {
      "description": "Description of the registry",
      "type": "string",
      "maxLength": 2000
    },
    "artifactsPath": {
      "description": "Path prefix for artifact files (e.g., \"/r\" or \"/artifacts\"). Defaults to \"/r\" if not specified.",
      "default": "/r",
      "type": "string",
      "maxLength": 100,
      "pattern": "^\\/[a-zA-Z0-9/_-]*$"
    },
    "items": {
      "description": "List of all artifacts in the registry",
      "type": "array",
      "items": {
        "$ref": "#/$defs/RegistryItemSummary"
      }
    }
  },
  "required": [
    "name",
    "items"
  ],
  "additionalProperties": false,
  "$defs": {
    "RegistryItemSummary": {
      "title": "RegistryItemSummary",
      "description": "Summary information about an artifact in the registry",
      "type": "object",
      "properties": {
        "name": {
          "description": "Artifact name (unique within registry)",
          "type": "string",
          "minLength": 1,
          "maxLength": 128,
          "pattern": "^[a-zA-Z0-9][a-zA-Z0-9-_]*$"
        },
        "kind": {
          "description": "Artifact kind",
          "anyOf": [
            {
              "type": "string",
              "const": "form"
            },
            {
              "type": "string",
              "const": "document"
            },
            {
              "type": "string",
              "const": "checklist"
            },
            {
              "type": "string",
              "const": "bundle"
            }
          ]
        },
        "version": {
          "description": "Semantic version",
          "type": "string",
          "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+"
        },
        "title": {
          "description": "Human-readable title",
          "type": "string",
          "minLength": 1,
          "maxLength": 200
        },
        "description": {
          "description": "Brief description of the artifact",
          "type": "string",
          "maxLength": 2000
        },
        "layers": {
          "description": "Available layer keys",
          "type": "array",
          "items": {
            "description": "Layer key",
            "type": "string"
          }
        },
        "tags": {
          "description": "Tags for search and filtering",
          "type": "array",
          "items": {
            "description": "Tag for categorization",
            "type": "string",
            "minLength": 1,
            "maxLength": 50
          }
        }
      },
      "required": [
        "name",
        "kind",
        "version"
      ],
      "additionalProperties": false
    }
  }
}