{
  "name": "@open-form/renderers",
  "version": "0.1.0",
  "description": "Umbrella package for OpenForm framework renderers - re-exports all renderers from @open-form/renderer-docx, @open-form/renderer-pdf, and @open-form/renderer-text",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./pdf": {
      "types": "./dist/pdf.d.ts",
      "import": "./dist/pdf.js",
      "default": "./dist/pdf.js"
    },
    "./docx": {
      "types": "./dist/docx.d.ts",
      "import": "./dist/docx.js",
      "default": "./dist/docx.js"
    },
    "./text": {
      "types": "./dist/text.d.ts",
      "import": "./dist/text.js",
      "default": "./dist/text.js"
    }
  },
  "sideEffects": false,
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "LICENSE.md"
  ],
  "keywords": [
    "openform",
    "open-form",
    "forms",
    "rendering",
    "renderers"
  ],
  "license": "MIT",
  "author": {
    "name": "OpenForm",
    "url": "https://open-form.dev"
  },
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/open-form/open-form.git",
    "directory": "packages/renderers"
  },
  "homepage": "https://open-form.dev",
  "bugs": {
    "url": "https://github.com/open-form/open-form/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "prebuild": "pnpm run clean",
    "pack:dry": "pnpm run build && npm pack --dry-run",
    "prepublishOnly": "pnpm run build",
    "lint": "eslint .",
    "check-types": "tsc --noEmit",
    "check": "pnpm lint && pnpm check-types && echo \"✅ All checks passed\" || echo \"❌ Checks failed\""
  },
  "dependencies": {
    "@open-form/renderer-docx": "workspace:*",
    "@open-form/renderer-pdf": "workspace:*",
    "@open-form/renderer-text": "workspace:*"
  },
  "devDependencies": {
    "@open-form/eslint-config": "workspace:*",
    "@open-form/typescript-config": "workspace:*",
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "eslint": "catalog:",
    "tsup": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
