{
  "extends": "../typescript-config/base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@open-form/core": ["../core/src/index.ts"],
      "@open-form/renderer-pdf": ["../renderer-pdf/src/index.ts"],
      "@open-form/renderer-docx": ["../renderer-docx/src/index.ts"],
      "@open-form/renderer-text": ["../renderer-text/src/index.ts"],
      "@/*": ["../core/src/*"]
    }
  },
  "include": ["src", "tests", "scripts"],
  "exclude": ["node_modules", "dist"]
}
