{
	"name": "@open-form/resolvers",
	"version": "0.1.1",
	"description": "Environment-specific resolvers for OpenForm - filesystem, S3, HTTP, etc.",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"default": "./dist/index.js"
		},
		"./fs": {
			"types": "./dist/fs/index.d.ts",
			"import": "./dist/fs/index.js",
			"default": "./dist/fs/index.js"
		}
	},
	"sideEffects": false,
	"files": [
		"dist",
		"README.md",
		"CHANGELOG.md",
		"LICENSE.md"
	],
	"keywords": [
		"open-form",
		"openform",
		"resolvers",
		"filesystem",
		"storage"
	],
	"license": "MIT",
	"author": {
		"name": "OpenForm",
		"url": "https://open-form.dev"
	},
	"engines": {
		"node": ">=18"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/open-form/open-form.git",
		"directory": "packages/resolvers"
	},
	"homepage": "https://open-form.dev",
	"bugs": {
		"url": "https://github.com/open-form/open-form/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"clean": "rm -rf dist",
		"prebuild": "pnpm run clean",
		"lint": "eslint .",
		"check-types": "tsc --noEmit",
		"check": "pnpm lint && pnpm check-types && echo \"All checks passed\" || echo \"Checks failed\"",
		"test": "vitest run",
		"test:watch": "vitest"
	},
	"dependencies": {
		"@open-form/types": "workspace:^"
	},
	"devDependencies": {
		"@open-form/eslint-config": "workspace:*",
		"@open-form/typescript-config": "workspace:*",
		"@types/node": "catalog:",
		"eslint": "catalog:",
		"tsup": "catalog:",
		"typescript": "catalog:",
		"vitest": "catalog:"
	}
}
